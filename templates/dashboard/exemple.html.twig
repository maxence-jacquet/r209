{% extends 'base.html.twig' %}

{% block title %}Dashboard User{% endblock %}

{% block body %}
<div class="mt-4">
  <h6>Tâches à faire</h6>
  <table class="table table-hover bg-white shadow-sm">
    <thead class="table-light">
      <tr>
        <th scope="col">Tâche</th>
        <th scope="col">Date limite</th>
        <th scope="col">Statut</th>
      </tr>
    </thead>
    <tbody>
      {% for note in notes %}
        <tr>
          <td>{{ note.titre }}</td>
          <td>{{ note.endAt ? note.endAt|date('d/m/Y') : 'Non définie' }}</td>
          <td>
            <span class="badge 
              {% if note.etat.nom == 'Terminé' %}bg-success
              {% elseif note.etat.nom == 'En retard' %}bg-danger
              {% else %}bg-warning text-dark{% endif %}">
              {{ note.etat.nom }}
            </span>
          </td>
        </tr>
      {% else %}
        <tr><td colspan="3">Aucune note trouvée</td></tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
