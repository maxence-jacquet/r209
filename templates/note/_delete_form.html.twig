<form method="post" action="{{ path('app_note_delete', {'id': note.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette note ?');" style="display:inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
    <button class="btn btn-sm btn-outline-danger" type="submit">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
