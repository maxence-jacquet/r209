{% extends 'base.html.twig' %}

{% block title %}Modifier un État{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
{% endblock %}

{% block body %}
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="mb-0">✏️ Modifier un État</h1>
      <a href="{{ path('app_etat_index') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Retour à la liste
      </a>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        {{ include('etat/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
      </div>
    </div>

    <div class="mt-3">
      {{ include('etat/_delete_form.html.twig') }}
    </div>
  </div>
{% endblock %}
